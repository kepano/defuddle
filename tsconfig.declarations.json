{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["dom", "es2019", "dom.iterable"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"files": [
		"src/index.ts",
		"src/index.full.ts"
	]
} 